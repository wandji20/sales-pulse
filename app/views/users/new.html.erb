<div class="mx-auto md:w-3/5 w-full px-4 pt-12">
  <h1 class="text-3xl font-semi-bold tracking-tight text-gray-900 mb-10">
    <%= t('.sign_up') %>
  </h1>

  <%= form_with model: @user, builder: CustomFormBuilder do |form| %>
    <%= form.email_field :email_address, required: true, autofocus: true,  label: t('.email.label'),
        autocomplete: "email_address", placeholder: t('.email.placeholder') %>

    <%= form.password_field :password, required: true, autocomplete: false,
        label: t('.password.label'), placeholder: t('.password.placeholder') %>

    <%= form.password_field :password_confirmation, required: true, autocomplete: false,
        label: t('.password_confirmation.label'), placeholder: t('.password_confirmation.placeholder') %>

    <%= form.submit t('.submit'), class: "mt-6 btn btn-primary" %>

    <div class="mt-3 text-xs text-gray-500">
      <p>
        <%= t('.already_have_account') %>
        <%= link_to t('.log_in'), login_path, class: "ps-1 link" %>
      </p>
    </div>
  <% end %>
</div>


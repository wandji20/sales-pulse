<% list_class = local_assigns[:list_class] || '' %>

<ul class="combobox <%= list_class %>" id="variant-options" role="listbox" data-show="<%= variants.exists? %>" data-combobox-target="options">
  <% variants.each do |variant| %>
    <li class="combobox-item <%= 'selected' if variant.id == selected %>" id="<%= dom_id(variant, :option) %>" role="option" tabindex="-1"
      data-action="click->combobox#selectOption" data-value="<%= variant.id %>">
      <!-- Selected: "font-semibold" -->
      <span class="block truncate label"><%= variant.name %></span>

      <!--
        Checkmark, only display for selected option.

        Active: "text-white", Not Active: "text-indigo-600"
      -->
      <span class="combobox-check">
        <%= render 'shared/svgs/check' %>
      </span>
    </li>
  <% end %>
</ul>
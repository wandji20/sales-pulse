<table class="table">
  <thead class='table-head'>
    <tr>
      <% Record::HEADERS.each do |header| %>
        <th scope="col" class="<%= header_class(header) %>"><%= t(".#{header}") %></th>
      <% end %>
    </tr>
  </thead>
  <tbody class="table-body">
      <%= render partial: 'table_row', collection: records, as: :record %>
  </tbody>
</table>

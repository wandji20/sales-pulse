<turbo-stream action="update" target="flash-notifications">
  <template>
    <%= render "shared/flash_message", type: :success,
                message: t('records.revert_success', name: @record.escape_value(:name), category: @record.escape_value(:category)) %>
  </template>
</turbo-stream>

<turbo-stream action="replace" target="<%= dom_id(@record) %>">
  <template>
    <%= render "records/table_row", record: @record %>
  </template>
</turbo-stream>

<turbo-stream action="update" target="flash-notifications">
  <template>
    <%= render "shared/flash_message", type: :success, message: t('flash_update.success', name: @record.escape_value(:name)) %>
  </template>
</turbo-stream>

<turbo-stream action="replace" target="<%= dom_id(@record) %>">
  <template>
    <%= render "records/table_row", record: @record %>
  </template>
</turbo-stream>

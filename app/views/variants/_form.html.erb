<%= form_with(model: [product, variant], id:, builder: CustomFormBuilder, class: "mt-3", data: { controller: 'form' }) do |form| %>
  <%= form.text_field :name, required: true, autocomplete: false,
      autofocus: true, label: t('.name.label'),
      placeholder: t('.name.placeholder') %>
  <%= form.number_field :buying_price, required: true, autocomplete: false,
      label: t('.buying_price.label'), placeholder: t('.buying_price.placeholder') %>

  <%= form.number_field :supply_price, required: true, autocomplete: false,
      label: t('.supply_price.label'), placeholder: t('.supply_price.placeholder') %>

  <div class="flex justify-end items-center mt-8 mb-6 gap-2">
    <button type='button' class="btn btn-secondary" data-action="modal#closeModal">
      <%= t('.cancel') %>
    </button>
    <%= form.submit t('.submit'), class: "btn btn-primary", disabled: true %>
  </div>
<% end %>
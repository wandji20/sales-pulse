<turbo-stream action="update" target="flash-notifications">
  <template>
    <%= render "shared/flash_message", type: @type, message: @message %>
  </template>
</turbo-stream>

<turbo-stream action="prepend" target="<%= "product-#{@product.id}-variants" %>">
  <template>
    <%= render "variants/variant", product: @product, variant: @variant %>
  </template>
</turbo-stream>

<div class="relative invisible z-50 sm:hidden hide" role="dialog" aria-modal="true"
      id='mobile-menu' data-sidebar-target='sidebar'>

  <div class="backdrop fixed inset-0 bg-gray-900/80" aria-hidden="true"></div>

  <div class="fixed inset-0 flex">
    
    <div class="relative mr-16 flex w-full max-w-xs flex-1 off-canvas-content">

      <div class="flex grow flex-col gap-y-5 overflow-y-auto bg-white px-6 pb-2">
        <div class="flex h-16 shrink-0 items-center">
          <button type="button" class="btn ms-auto text-gray-400" data-sidebar-target="toggler" data-action="sidebar#toggle">
            <span class="sr-only"><%= t('.close_sidebar') %></span>
            <%= render 'shared/svgs/close' %>
          </button>
        </div>

        <div class="space-y-1 pb-3 pt-2">
          <%= link_to t('.dashboard'), dashboard_path, class: "nav-menu-link #{active_class('index', 'dashboard')}" %>

          <%= link_to t('.products'), products_path, class: "nav-menu-link #{active_class('index', 'products')}" %>

          <%= link_to t('.records'), records_path, class: "nav-menu-link #{active_class('index', 'records')}" %>

          <%= link_to t('.customers'), users_path, class: "nav-menu-link #{active_class('index', 'users')}" %>
        </div>
        <div class="border-t border-gray-200 pb-3 pt-4">
          <div class="mt-3 flex flex-col gap-3">
            
            <% if current_user %>
              <%= link_to t('.account'), account_path, class: "nav-menu-link #{active_class('edit', 'users')}" %>
              <%= button_to t('.sign_out'), logout_path, method: :delete, class: 'nav-menu-link' %>
            <% else %>
              <%= link_to t('.sign_in'), login_path, class: "nav-menu-link #{active_class('new', 'sessions')}" %>
            <% end %>
  
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
